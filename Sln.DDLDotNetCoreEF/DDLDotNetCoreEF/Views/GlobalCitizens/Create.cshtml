@model DDLDotNetCoreEF.Models.ViewModel.GlobalCitizenVM

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>GlobalCitizen</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                Male:   @Html.RadioButton("Gender", 0)
                Female: @Html.RadioButton("Gender", 1)
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="CountryName" class="control-label"></label>
                <input asp-for="CountryName" class="form-control" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContinentName" class="control-label"></label>
                <select asp-for="ContinentName"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.ContinentList,"ContinentID", "ContinentName"))"></select>
                <span asp-validation-for="ContinentName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
