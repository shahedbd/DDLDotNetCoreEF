@model IEnumerable<DDLDotNetCoreEF.Models.GlobalCitizen>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="glyphicon glyphicon-plus"></i>Create New
    </a>
</p>
<table class="table table-bordered table-striped table-condensed" border="1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContinentCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContinentCode)
                </td>             
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDateTime)
                </td>               
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-success">
                        <i class="glyphicon glyphicon-pencil"></i>Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info">
                        <i class="glyphicon glyphicon-eye-open"></i>Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash"></i>Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
