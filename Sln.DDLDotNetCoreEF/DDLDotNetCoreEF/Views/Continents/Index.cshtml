@model DDLDotNetCoreEF.Models.Continent
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

@{
    <form asp-controller="Home" asp-action="Continents" method="post" class="form-horizontal" role="form">
        <div class="form-group">
            <div class="row">
                <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                    <label asp-for="ContinentName" class="control-label"></label>
                    <select asp-for="ContinentID"
                            class="form-control" 
                            asp-items="@(new SelectList(@ViewBag.ContinentList,"ContinentID", "ContinentName"))"></select>
                </div>
            </div>
        </div>     
    </form>
}
